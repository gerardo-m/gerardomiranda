---
import { Image } from "astro:assets";
const { imageSize, image, title, thirdColumn} = Astro.props;
const altText = title + " logo";
---

<div class="w-full flex flex-col items-center content-start space-y-2 px-4
            sm:flex-row sm:space-y-0">
    <div class:list={["rounded-3xl overflow-hidden aspect-square content-center border-y-4 border-matrix-dark w-40", imageSize]}>
        <Image src={image} alt={altText} >
        </Image>
    </div>
    <div class="flex flex-col space-y-2
                sm:items-start sm:justify-start sm:min-w-[300px] sm:max-w-[70%] sm:ml-16">
        <h3 class="text-xl font-bold text-matrix-medium text-center
                    sm:text-2xl">{title}</h3>
        <div class="text-base sm:text-lg">
            <slot></slot>
        </div>
    </div>
    <div class:list={["w-full sm:min-w-52 sm:max-w-80 pl-2 ", thirdColumn]}>
        <slot name="third-column"></slot>
    </div>
    
</div>