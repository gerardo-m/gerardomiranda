---
import type { CollectionEntry } from 'astro:content';
import { render } from 'astro:content';
import ModalDialog from "./ModalDialog.astro";
interface Props {
    entry: CollectionEntry<"journal">
}
const {entry} = Astro.props;
const { Content} = await render(entry);
---

<ModalDialog id={"news-dialog-"+entry.id}>
    <div class="flex flex-col space-y-8 max-w-screen-md">
        <div class="flex flex-col space-y-2 items-center">
            <h2 class="text-matrix-medium text-xl font-bold sm:text-3xl">{entry.data.title}</h2>
            <p class="text-base text-matrix-mediumlight sm:text-lg">{entry.data.date}</p>
        </div>
        <div class="prose prose-p:text-base prose-p:text-white prose-p:font-sans prose-p:leading-6 
                  prose-a:text-matrix-mediumlight hover:prose-a:text-matrix-light p-3 space-y-3
                    sm:prose-p:text-lg 
                    md:prose-p:text-xl">
            <Content></Content>
        </div>
    </div>
    
</ModalDialog>