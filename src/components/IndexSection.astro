---
const { id, title} = Astro.props;
---

<section id={id}>
    <div class="w-full flex flex-col p-8 border-4 border-double border-matrix-medium">
        <h1 class="text-center text-4xl p-8
                    sm:text-5xl
                    lg:text-6xl">{title}</h1>
        <div class="flex flex-col px-4 items-center space-y-16">
            <slot></slot>
        </div>
    </div>
</section>