---
import NavigationLink from "./NavigationLink.astro"
---
<nav id="menu-list" class="fixed size-full flex flex-col items-end left-full transition ease-out duration-500 z-20 text-matrix-medium
        sm:left-0 mt-16 sm:h-auto sm:items-center">
    <ul class="w-3/4 p-5 bg-surface-dark
        sm:flex sm:flex-row sm:w-auto sm:justify-between sm:py-0 sm:h-16 sm:px-0
        md:text-lg lg:text-xl">
        <NavigationLink url="/" name="Home"></NavigationLink>
        <!-- <NavigationLink url="#experience" name="Work Experience"></NavigationLink>
        <NavigationLink url="#projects" name="Projects"></NavigationLink> -->
        <NavigationLink url="#projects" name="About me"></NavigationLink>
        <NavigationLink url="#projects" name="About this site"></NavigationLink>
    </ul>
</nav>
