---
import { Image } from "astro:assets";
const {techImage, title} = Astro.props;

---

<div class="w-full flex flex-col items-center content-start space-y-4 px-4
            sm:flex-row sm:space-x-16  sm:space-y-0">
    <div class="rounded-3xl overflow-hidden aspect-square content-center border-y-4 border-matrix-dark w-40
                sm:w-32">
        <Image src={techImage} alt="the matrix gif" >
        </Image>
    </div>
    <div class="flex flex-col space-y-2
                sm:items-start sm:justify-start">
        <h3 class="text-lg font-bold text-matrix-medium text-center">{title}</h3>
        <p class="text-base">
            <slot></slot>
        </p>
    </div>
    
</div>