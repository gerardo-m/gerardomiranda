---
// Supports weights 400-700
import '@fontsource-variable/kode-mono';
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import DefaultButton from '../components/DefaultButton.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="keywords" content="software web development developer">
		<meta name="description" content="Gerardo Miranda" />
		<meta name="viewport" content="width=device-width" />
		<script src="../scripts/global.js"></script>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-full flex flex-col items-center font-mono">
		<slot name="dialogs"/>
		<div id="page-modal" class="bg-surface-dark  opacity-50 z-40 fixed top-0 w-full h-full hidden"></div>
		<div class="w-full max-w-screen-xl grow flex flex-col">
			<div id="content-modal" class="bg-surface-dark opacity-50 z-10 fixed w-full h-full hidden"></div>
			<header>
				<Navigation></Navigation>
			</header>
			<slot />
			<footer class="flex flex-col-reverse justify-evenly text-matrix-medium mb-4 mt-auto items-center
							sm:flex-row">
				<div class="sm:w-1/3 text-center mt-4">Â© 2024 Gerardo Miranda.</div>
				<div class="flex flex-col items-center mt-4 sm:flex-row  justify-evenly sm:w-2/3">
					<a class="text-lg sm:text-xl" href="/about-me"><DefaultButton>About me</DefaultButton></a>
					<a class="text-lg sm:text-xl" href="/about-this-site"><DefaultButton>About this site</DefaultButton></a>
				</div>
			</footer>
		</div>
		<div id="home-arrow" class="fixed bottom-6 right-5 opacity-0 h-8 w-8 sm:bottom-10 sm:botton-20 sm:h-10 sm:w-10">
			<a href="#top">
				<svg  class=" animate-bounce h-full w-full fill-matrix-mediumlight hover:fill-matrix-light"viewBox="0 0 512 512">
					<polygon points="247.5,0 34.2,213.3 34.2,341.3 204.8,170.7 204.8,512 290.2,512 290.2,170.7 460.8,341.3 460.8,213.3 "/>
				</svg>
			</a>
			
		</div>
	</body>
</html>
<script is:inline>
	const showDialog = (dialogId) =>{
        const dialog = document.getElementById(dialogId);
        const modalBg = document.getElementById("page-modal");
        modalBg.classList.remove("hidden");
        dialog.classList.remove("hidden");
		//Disabling scrolling
		document.body.style.overflow = "hidden";
  		document.body.style.userSelect = "none";
    }
</script>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: monospace;
		background: #13151a;
	}
	code {
		font-family:
			monospace,
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New;
	}
</style>
