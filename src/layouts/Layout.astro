---
// Supports weights 400-700
import '@fontsource-variable/kode-mono';
import '../styles/global.css';
import JobDetailsDialog from '../components/JobDetailsDialog.astro';
import Navigation from '../components/Navigation.astro';
import DefaultButton from '../components/DefaultButton.astro';

interface Props {
	title: string;
}

const flexwage = {
	id:"flexwage",
	title: "Flexwage Solutions",
    location: "Scottsdale, AZ",
    period: "09/2018 - Present",
    position: "Web developer: Ruby on Rails",
    description: "Maintaining and developing new features for the Flexwage web application using Ruby on Rails",
    descriptionItems: [
		"Develop importers, exporters and processes for client data of dozens of clients.",
		"Integrations with third party APIs.",
		"Customization of the web application for company's partners",
		"Implemented a highly customizable internal tool (named Urban Llama) to generate thousands of records for testing purposes."
	],
}

const billfire ={
	id:"billfire",
	title: "Billfire",
    location: "Scottsdale, AZ",
    period: "07/2017 - 08/2018",
    position: "QA: Selenium WebDriver",
    description: "Executing manual end to end testing of the legacy web application. Automating testing of the new web application using Selenium WebDriver.",
    descriptionItems: [
		"Reduced automated tests line count by 50% by implementing a new testing framework.",
		"Helped writing the test suites for the new web application of the company.",
	],
}

const economico ={
	id:"economico",
	title: "Banco Económico",
    location: "Santa Cruz de la Sierra, Bolivia",
    period: "06/2014 - 07/2017",
    position: "System Analyst: .NET framework",
    description: "Refactoring and maintenance for the internal web application used by the Risk management department using the .NET framework",
    descriptionItems: [
		"Extended internal credit score tool capabilities from 3 years of historic data to 7 years while reducing the processing time from 10+ hours to less than 1 hour.",
		"Reduced the amount of support calls of internal clients by more than 50%",
		"Developed specialized tools to analyze payment capabilities of special clients. e.g. agricultural businesses.",
	],
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="keywords" content="software web development developer">
		<meta name="description" content="Gerardo Miranda" />
		<meta name="viewport" content="width=device-width" />
		<script src="../scripts/global.js"></script>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-full flex flex-col items-center font-mono">
		<JobDetailsDialog id={flexwage.id} title={flexwage.title} location={flexwage.location} period={flexwage.period}
			 position={flexwage.position} description={flexwage.description} descriptionItems={flexwage.descriptionItems}></JobDetailsDialog>
		<JobDetailsDialog id={billfire.id} title={billfire.title} location={billfire.location} period={billfire.period}
			 position={billfire.position} description={billfire.description} descriptionItems={billfire.descriptionItems}></JobDetailsDialog>
		<JobDetailsDialog id={economico.id} title={economico.title} location={economico.location} period={economico.period}
			 position={economico.position} description={economico.description} descriptionItems={economico.descriptionItems}></JobDetailsDialog>
		<slot name="dialogs"/>
		<div id="page-modal" class="bg-surface-dark  opacity-50 z-40 fixed top-0 w-full h-full hidden"></div>
		<div class="w-full max-w-screen-xl grow flex flex-col">
			<div id="content-modal" class="bg-surface-dark opacity-50 z-10 fixed w-full h-full hidden"></div>
			<header>
				<Navigation></Navigation>
			</header>
			<slot />
			<footer class="flex flex-col-reverse justify-evenly text-matrix-medium mb-4 mt-auto items-center
							sm:flex-row">
				<div class="sm:w-1/3 text-center mt-4">© 2024 Gerardo Miranda.</div>
				<div class="flex flex-col items-center mt-4 sm:flex-row  justify-evenly sm:w-2/3">
					<a class="text-lg sm:text-xl" href="/about-me"><DefaultButton>About me</DefaultButton></a>
					<a class="text-lg sm:text-xl" href="/about-this-site"><DefaultButton>About this site</DefaultButton></a>
				</div>
			</footer>
		</div>
	</body>
</html>
<script is:inline>
	const showDialog = (dialogId) =>{
        const dialog = document.getElementById(dialogId);
        const modalBg = document.getElementById("page-modal");
        modalBg.classList.remove("hidden");
        dialog.classList.remove("hidden");
		//Disabling scrolling
		document.body.style.overflow = "hidden";
  		document.body.style.userSelect = "none";
    }
</script>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: monospace;
		background: #13151a;
	}
	code {
		font-family:
			monospace,
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New;
	}
</style>
